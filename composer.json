{
	"repositories": [
		{
			"type": "composer",
			"url": "https://composer.typo3.org/"
		},
		{
			"type": "vcs",
			"url": "https://github.com/resterland/resterland.git"
		}
	],

	"name": "resterland/resterland",
	"type": "typo3-cms-extension",
	"description": "Tweaks the extension bootstrap-package of Bajamin Kott with some Resterland goodies.",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"TYPO3",
		"extension"
	],
	"homepage": "https://resterland.ch",
	"authors": [
		{
			"name": "Roland Fuhrer",
			"email": "roland@resterland.ch",
			"homepage": "https://resterland.ch",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.2",
		"helhum/typo3-secure-web": "^0.2",
		"typo3/cms-core": "^9.5",
		"bk2k/bootstrap-package": ">=10.0 <11.0.0",
		"georgringer/news": "^7.3",
		"bo/slickcarousel": "^3.0"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"friendsofphp/php-cs-fixer": "^2.0",
		"typo3/cms-styleguide": "~10.0.2",
		"typo3/testing-framework": "^4.11"
	},
	"autoload": {
		"psr-4": {
			"Resterland\\Resterland\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Resterland\\Resterland\\Tests\\": "Tests"
		}
	},
	"replace": {
		"resterland/resterland": "self.version",
		"typo3-ter/resterland": "self.version"
	},
	"config": {
		"platform": {
			"php": "7.2"
		},
		"optimize-autoloader": true
	},
	"scripts": {
		"set-version": [
			"Resterland\\Resterland\\Composer\\VersionScript::setVersion"
		]
	},
	"extra": {
		"typo3/cms": {
			"root-dir": "private",
			"web-dir": "public"
		}
	}
}
